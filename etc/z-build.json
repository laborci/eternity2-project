{
	"buildVersionFile": "./build-version",
	"googlefonts": {
		"src": [
			"./app/Mission/Admin/Page/@css/google-fonts.json"
		],
		"dest": "./public/fonts/",
		"path": "/fonts/"
	},
	"copy": [
		{
			"src": "./node_modules/@fortawesome/fontawesome-pro/webfonts/",
			"pattern": "*",
			"dest": "./public/fonts/fontawesome/"
		},
		{
			"src": "./assets/",
			"pattern": "**",
			"dest": "./public/",
			"watch": true
		},
		{
			"src": "./app/",
			"pattern": "index.php",
			"dest": "./public/",
			"watch": true
		}
	],
	"css": [
		{
			"src": "./app/Mission/Web/Page/@css/",
			"dest": "./public/web/css/"
		},
		{
			"src": "./app/Mission/Admin/Page/@css/",
			"dest": "./public/admin/css/"
		}
	],
	"js": [
		{
			"src": "./app/Mission/Web/Page/@js/",
			"dest": "./public/web/js/"
		},
		{
			"src": "./app/Mission/Admin/Page/@js/",
			"dest": "./public/admin/js/"
		}
	]
}